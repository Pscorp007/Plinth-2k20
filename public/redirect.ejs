  </h1>

  <script>
    // setTimeout(function () {
    //       window.location = localStorage.getItem('tempURL');
    //         }, 2000);
    var urlRedirect = localStorage.getItem('tempURL');
    if(urlRedirect === null || urlRedirect === undefined){
      setTimeout(function () {
            window.location.href = "https://plinth.in";
              }, 2000);
      
    }
    else {
      setTimeout(function () {
          window.location = urlRedirect;
